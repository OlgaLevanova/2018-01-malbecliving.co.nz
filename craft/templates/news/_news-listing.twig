{% paginate craft.entries.section('news').limit(3).order('postDate desc') as pageInfo, pageEntries %}

{% if not craft.request.isAjax %}
<section class="common-block news-listing" data-news-total="{{ pageInfo.total }}">
	<div class="container reveal-block">

		<h1>{{ entry.pageTitle }}</h1>
{% endif %}

		{% if not craft.request.isAjax %}
		<div id="news-container">
		{% endif %}

			{% include 'partials/_3-blocks-news' with {news:pageEntries, page:pageInfo.currentPage} %}

		{% if not craft.request.isAjax %}
		</div>

		{% include 'partials/_pagination' %}

	</div>
</section>
{% endif %}